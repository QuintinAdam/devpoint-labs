<div class="jumbotron">
  <div class="container">
    <h1><%= t(:home_welcome_message) %></h1>
    <p><a class="btn btn-primary btn-lg">Learn more</a></p>
  </div>
</div>
<p>We have <%= pluralize(@users.count, 'user') %> so far</p>
<%#= image_tag current_user.avatar.url %>
<%#= image_tag current_user.avatar.url(:medium) %>
<%#= image_tag current_user.avatar.url(:thumb) %>

<h3> Our Students </h3>
<ul class='list-inline thumbnails'>
  <% @users.each do |user| %>
    <li class='thumbnail text-center'>
      <% unless user.pictures.empty? %>
        <p><%= image_tag(user.pictures.first.image.url(:small), class: 'img-circle') %></p>
        <% end %>
      <h3> <%= user.full_name %></h3>
      <%= display_tags(user) %>
      <p>Projects</p>
      <ul>
        <% user.projects.each do |p| %>
          <li><%= p.name %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>